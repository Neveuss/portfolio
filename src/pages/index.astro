---
import { getCollection } from 'astro:content';

// Layout import — provides basic page elements: <head>, <nav>, <footer> etc.
import BaseLayout from '../layouts/BaseLayout.astro';

// Component Imports
import CallToAction from '../components/CallToAction.astro';
import Grid from '../components/Grid.astro';
import Hero from '../components/Hero.astro';
import Icon from '../components/Icon.astro';
import Pill from '../components/Pill.astro';
import PortfolioPreview from '../components/PortfolioPreview.astro';

// Page section components
import ContactCTA from '../components/ContactCTA.astro';
import Skills from '../components/Skills.astro';

// Content Fetching: List four most recent work projects
const projects = (await getCollection('work'))
  .sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf())
  .slice(0, 4);
---

import BaseLayout from '../layouts/BaseLayout.astro';

<BaseLayout>
  <div class="stack gap-20 lg:gap-48">
    <div class="wrapper stack gap-8 lg:gap-20">
      <header class="hero">
        <Hero
          title="Adam Boudaoud"
          tagline="ÉTUDIANT EN BTS SIO - OPTION SISR"
          align="start"
        >
          <div class="roles roles-centered"></div>
        </Hero>

        <img
          alt="Adam Boudaoud"
          width="480"
          height="620"
          src="/assets/info.jpg"
        />
      </header>

      <Skills />

      <!-- Section des outils / logiciels avec icônes agrandies et contours ronds -->
      <section class="tools">
        <div class="wrapper">
          <h2 class="tools-title">
            Mes outils / logiciels
            <img src="/assets/gear-icon.png" alt="⚙️" width="30" height="30" />
          </h2>
          <p class="tools-description">
            Toutes ces connaissances ont été acquises de différentes façons. Elles ont été acquises durant mes études en BTS SIO et d'autres par ma propre initiative en essayant de mettre en place des solutions. J’ai également relevé les défis organisés, ce qui permet d’effectuer des recherches et aller encore plus loin.
          </p>
          <div class="tools-grid">
            <!-- Tool Cards -->
            <div class="tool-card">
              <img src="/assets/WINDOWS-SERVEUR.png" alt="Windows Server" />
              <h3>Windows Server</h3>
            </div>

            <div class="tool-card">
              <img src="/assets/INTUNE.png" alt="Intune" />
              <h3>Intune</h3>
            </div>

            <div class="tool-card">
              <img src="/assets/VMware-Symbol.png" alt="VMware" />
              <h3>VMware</h3>
            </div>

            <div class="tool-card">
              <img src="/assets/CISCO.jpg" alt="Cisco Packet Tracer" />
              <h3>Cisco Packet Tracer</h3>
            </div>

            <div class="tool-card">
              <img src="/assets/Jamf1.png" alt="Jamf" />
              <h3>Jamf</h3>
            </div>

            <div class="tool-card">
              <img src="/assets/ServiceNow-Logo.png" alt="ServiceNow" />
              <h3>ServiceNow</h3>
            </div>

            <div class="tool-card">
              <img src="/assets/linux-logo-2.png" alt="Linux" />
              <h3>Linux</h3>
            </div>

            <div class="tool-card">
              <img src="/assets/PuTTY_Icon.png" alt="PuTTY" />
              <h3>PuTTY</h3>
            </div>

            <div class="tool-card">
              <img src="/assets/Office-365-Logo-2013-2020.png" alt="Office 365" />
              <h3>Office 365</h3>
            </div>

            <div class="tool-card">
              <img src="/assets/Microsoft-Azure.png" alt="Microsoft Azure" />
              <h3>Microsoft Azure</h3>
            </div>
          </div>
        </div>
      </section>
    </div>

    <main class="wrapper stack gap-20 lg:gap-48">
      <section class="section with-background bg-variant">
        <header class="section-header stack gap-2 lg:gap-4">
          <h3>Certifications</h3>
          <p>Voici certaines de mes certifications obtenues dans le domaine de l'IT.</p>
        </header>

        <div class="gallery">
          <Grid variant="small">
            <!-- Certification Jamf -->
            <li class="certification-card">
              <a href="/assets/Jamf.pdf" target="_blank">
                <img src="/assets/Jamf1.png" alt="Certification Jamf" width="100" height="100" />
              </a>
            </li>

            <!-- Certification ITIL V4 -->
            <li class="certification-card">
              <a href="/assets/ITILV4.pdf" target="_blank">
                <img src="/assets/ITIL-4-FOUNDATION-LOGO.png" alt="Certification ITIL V4" width="100" height="100" />
              </a>
            </li>

            <!-- Certification Data Legal Drive - Mise à jour pour rediriger vers 1.jpg -->
            <li class="certification-card">
              <a href="/assets/1.jpg" target="_blank">
                <img src="/assets/data.png" alt="Certification IA & RGPD" width="120" height="120" />
              </a>
            </li>
          </Grid>
        </div>
      </section>

      <section class="section with-background with-cta">
        <header class="section-header stack gap-2 lg:gap-4">
          <h3>Mes Derniers Projets</h3>
          <p>Aperçu de mes projets récents en gestion IT et support technique.</p>
        </header>

        <div class="gallery">
          <Grid variant="offset">
            {
              projects.map((project) => (
                <li>
                  <PortfolioPreview project={project} />
                </li>
              ))
            }
          </Grid>
        </div>

        <div class="cta">
          <CallToAction href="/work/">
            View All
            <Icon icon="arrow-right" size="1.2em" />
          </CallToAction>
        </div>
      </section>
    </main>

    <ContactCTA />
  </div>

<script>
  function openNestedDocs(event: Event) {
    event.preventDefault();
    const nestedDocs = event.target.closest('.certification-card').querySelector('.nested-certifications');
    if (nestedDocs) {
      nestedDocs.classList.toggle('hidden');
    }
  }
</script>

</BaseLayout>

<style>
  .hidden {
    display: none;
  }
  .nested-certifications {
    margin-top: 1rem;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }
  .nested-certifications a {
    color: #0073e6;
    text-decoration: underline;
  }

  .hero {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2rem;
  }

  .roles {
    display: none;
  }

  .roles-centered {
    display: flex;
    justify-content: center;
    gap: 1rem;
    margin-top: 1rem;
  }

  .pill-centered {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0.5rem 1rem;
    text-align: center;
    background-color: #6B21A8;
    color: white;
    border-radius: 1.5rem;
    box-shadow: var(--shadow-sm);
    min-width: 120px;
    width: auto;
  }

  .hero img {
    aspect-ratio: 5 / 4;
    object-fit: cover;
    object-position: top;
    border-radius: 1.5rem;
    box-shadow: var(--shadow-md);
  }

  .tools {
    background-color: #1e1e1e;
    padding: 4rem 0;
    border-radius: 1.5rem; 
  }

  .tools .wrapper {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    text-align: center;
  }

  .tools-title {
    font-size: 2.5rem;
    color: #ffffff;
    margin-bottom: 1rem;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
  }

  .tools-description {
    color: #cccccc;
    margin-bottom: 3rem;
    font-size: 1.125rem;
    line-height: 1.6;
  }

  .tools-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem;
  }

  .tool-card {
    background: #2a2a2a;
    padding: 2rem 1.5rem;
    text-align: center;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    border: 2px solid #3e3e3e;
  }

  .tool-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 15px 30px rgba(0, 0, 0, 0.2);
  }

  .tool-card img {
    width: 120px;
    height: 120px;
    margin-bottom: 1rem;
    object-fit: contain;
  }

  .tool-card h3 {
    font-size: 1.25rem;
    color: #ffffff;
    margin-top: 0.5rem;
  }

  @media (min-width: 768px) {
    .tools-title {
      font-size: 3rem;
    }
    .tools-description {
      font-size: 1.25rem;
    }
  }

  @media (min-width: 50em) {
    .hero {
      display: grid;
      grid-template-columns: 6fr 4fr;
      padding-inline: 2.5rem;
      gap: 3.75rem;
    }

    .roles-centered {
      justify-content: flex-start;
    }

    .hero img {
      aspect-ratio: 3 / 4;
      border-radius: 4.5rem;
      object-fit: cover;
    }

    .tools-grid {
      gap: 3rem;
    }
  }

  .section {
    display: grid;
    gap: 2rem;
  }

  .with-background {
    position: relative;
  }

  .with-background::before {
    --hero-bg: var(--bg-image-subtle-2);

    content: '';
    position: absolute;
    pointer-events: none;
    left: 50%;
    width: 100vw;
    aspect-ratio: calc(2.25 / var(--bg-scale));
    top: 0;
    transform: translateY(-75%) translateX(-50%);
    background:
      url('/assets/backgrounds/noise.png') top center/220px repeat,
      var(--hero-bg) center center / var(--bg-gradient-size) no-repeat,
      var(--gray-999);
    background-blend-mode: overlay, normal, normal, normal;
    mix-blend-mode: var(--bg-blend-mode);
    z-index: -1;
  }

  .with-background.bg-variant::before {
    --hero-bg: var(--bg-image-subtle-1);
  }

  .section-header {
    justify-self: center;
    text-align: center;
    max-width: 50ch;
    font-size: var(--text-md);
    color: var(--gray-300);
  }

  .section-header h3 {
    font-size: var(--text-2xl);
  }

  @media (min-width: 50em) {
    .section {
      grid-template-columns: repeat(4, 1fr);
      grid-template-areas: 'header header header header' 'gallery gallery gallery gallery';
      gap: 5rem;
    }

    .section.with-cta {
      grid-template-areas: 'header header header cta' 'gallery gallery gallery gallery';
    }

    .section-header {
      grid-area: header;
      font-size: var(--text-lg);
    }

    .section-header h3 {
      font-size: var(--text-4xl);
    }

    .with-cta .section-header {
      justify-self: flex-start;
      text-align: left;
    }

    .gallery {
      grid-area: gallery;
    }

    .cta {
      grid-area: cta;
    }
  }

  .mention-card {
    display: flex;
    height: 7rem;
    justify-content: center;
    align-items: center;
    text-align: center;
    border: 1px solid var(--gray-800);
    border-radius: 1.5rem;
    color: var(--gray-300);
    background: var(--gradient-subtle);
    box-shadow: var(--shadow-sm);
  }

  @media (min-width: 50em) {
    .mention-card {
      border-radius: 1.5rem;
      height: 9.5rem;
    }
  }
</style>
